#################################################################################
# NetSpeed Spyglass Waivers
#################################################################################
#############################################
# Global NoC Waivers - Not related to a block
#############################################

waive -rule "ComplexExpr-ML" -comment "NS - Long expression"
waive -rule "LineLength" -comment "NS - Line-length exceeds defined limit"
waive -rule "FlopEConst" -comment "NS - Waived as some of coarse clock gaters are turned off"
waive -rule "NoBusPartClock-ML" -comment "NS - RX clock signals are implemented as a bus"
waive -rule "STARC-2.1.1.1" -comment "NS - 'function+assign' construct used to describe combinational logic rather than 'always' construct"
waive -rule "STARC-2.6.2.2" -comment "NS - Signal (or some of its bits) is set and read in the same always block"
waive -rule WRN_47 -comment "NS - Zero or negative repetition multiplier used in multiple concatenation"
waive -rule W111 -comment "NS - Not all elements of an array are read"
waive -rule W121 -comment "NS - A variable names collides with and may shadow another variable"
waive -rule W120 -comment "NS - Declared but not used"
waive -rule W159 -comment "NS - Condition contains a constant expression"
waive -rule W163 -comment "NS - Truncation of bits in constant integer conversion"
waive -rule W175 -comment "NS - A parameter/generic has been defined but is not used"
waive -rule W191 -comment "NS - Function declared but not used"
waive -rule W216 -comment "NS - Inappropriate range select for integer or time variable"
waive -rule W240 -comment "NS - An input has been declared but is not read"
waive -rule W241 -comment "NS - Output is never set"
waive -rule W287b -comment "NS - Output port of an instance is not connected"
waive -rule W328 -comment "NS - Truncation in constant conversion, without loss of data"
waive -rule W456 -comment "NS - A signal is included in the sensitivity list of a process/always block but not all of its bits are read in that block"
waive -rule W488 -comment "NS - A bus/array appears in the sensitivity list but not all bits of it are read in the contained block/process"
waive -rule W490 -comment "NS - A control expression/sub-expression is a constant"
waive -rule W497 -comment "NS - Not all bits of a bus are set"
waive -rule W498 -comment "NS - Not all bits of a bus are read"
waive -rule W528 -comment "NS - A signal or variable is set but never read"
waive -rule W563 -comment "NS - Reduction of a single-bit expression is redundant"

